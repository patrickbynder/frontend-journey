{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2019",
		"rootDir": "./src"
	},
	"exclude": ["./**/node_modules/**/*"],
	"include": ["./src/**/*", "global.d.ts"]
}
